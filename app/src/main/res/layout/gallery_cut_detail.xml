<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4f4f4f">

        <RelativeLayout
            android:id="@+id/cut_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/cut_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is a competition"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/cut_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cut_caption"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_tag_list"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/w_tag_icon" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" />
    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="공유"
        android:visibility="gone"
        />
</LinearLayout>