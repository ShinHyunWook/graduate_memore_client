<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:paddingRight="10dp">
        <com.mglab.memore.CircleImageView
            android:id="@+id/item_friend_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/item_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_friend_profile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/item_friend_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_toLeftOf="@+id/tag_check"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/item_friend_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <CheckBox
            android:id="@+id/tag_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:theme="@style/MyCheckBox"
            />


</RelativeLayout>
