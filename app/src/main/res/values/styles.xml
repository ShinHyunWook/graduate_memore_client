<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#b2b2b2</item>
        <item name="colorAccent">#6f6f6f</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="actionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">#666666</item>
        <item name="android:textColor">#efeedc</item>
    </style>

    <style name="JoinLoginEditText">

        <item name="android:textSize">16sp</item>

        <item name="android:textColor">#a39a91</item>

        <item name="android:paddingLeft">10dp</item>

    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#000</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#000</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#FFFF3F3C</item> <!-- checkbox text color -->
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">16sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">70dp</item><!-- menu item height-->
    </style>

</resources>


